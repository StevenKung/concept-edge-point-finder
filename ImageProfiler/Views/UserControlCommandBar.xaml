<UserControl x:Class="ImageProfiler.Views.UserControlCommandBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProfiler.Views"
             xmlns:action="clr-namespace:Presentation.Actions;assembly=Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <!--view model instanize-->
        <action:ViewModelActionPanel/>
    </UserControl.DataContext>
    <Grid>
        <Button Content="PointFree" HorizontalAlignment="Left" Margin="202,72,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ActionPointFree}" CommandParameter="{Binding Context}"/>
        <Button Content="LineFree" HorizontalAlignment="Left" Margin="303,72,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ActionLineFree}" CommandParameter="{Binding Context}"/>
        <Button Content="Coordinate" HorizontalAlignment="Left" Margin="406,72,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ActionCoordinate}" CommandParameter="{Binding Context}"/>
        

    </Grid>
</UserControl>
